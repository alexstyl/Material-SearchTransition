<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.alexstyl.searchtransition">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name="com.alexstyl.searchtransition.mainscreen.MainActivity"
      android:label="@string/search_hint">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name="com.alexstyl.searchtransition.searchscreen.SearchActivity"
      android:windowSoftInputMode="stateVisible" />
  </application>

</manifest>
